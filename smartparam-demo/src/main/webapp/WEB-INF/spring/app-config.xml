<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:property-placeholder location="classpath:smartparam-demo.properties"  ignore-resource-not-found="false" />

    <context:component-scan base-package="org.smartparam.demo"/>
    <context:component-scan base-package="org.smartparam.editor.backend"/>

    <bean id="paramEngine" class="org.smartparam.spring.SpringParamEngineFactory">
        <property name="config">
            <bean class="org.smartparam.engine.config.SmartParamConfig">
                <property name="packagesToScan">
                    <list>
                        <value>org.smartparam.demo.param</value>
                        <value>org.smartparam.spring</value>
                    </list>
                </property>
                <property name="paramRepository" ref="smartParamProvider"/>
            </bean>
        </property>
    </bean>

    <bean id="smartParamEditorParamService" class="org.smartparam.editor.backend.service.BasicParamService">
        <property name="paramEngine" ref="paramEngine"/>
    </bean>

</beans>