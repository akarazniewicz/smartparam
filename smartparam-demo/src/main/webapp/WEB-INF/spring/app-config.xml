<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:property-placeholder location="classpath:smartparam-demo.properties"  ignore-resource-not-found="false" />

    <context:component-scan base-package="org.smartparam.demo"/>

    <mvc:resources mapping="/js/**" location="/js/" cache-period="1000"/>

    <mvc:annotation-driven conversion-service="conversionService">
        <!--<mvc:message-converters>
            <bean class="pl.generali.merkury.service.conversion.MerkuryMappingJacksonHttpMessageConverter"/>
        </mvc:message-converters>-->
    </mvc:annotation-driven>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.UrlBasedViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <!--<property name="formatterRegistrars">
            <set>
                <ref bean="merkuryFormatterRegistrar"/>
            </set>
        </property>-->
    </bean>

    <bean id="paramEngine" class="org.smartparam.engine.core.engine.ParamEngine">
        <property name="paramProvider" ref="paramProvider" />
        <property name="functionProvider" ref="functionProvider" />
        <property name="invokerProvider" ref="invokerProvider" />
        <property name="assemblerProvider" ref="assemblerProvider" />
    </bean>

    <bean id="paramProvider" class="org.smartparam.engine.core.engine.SmartParamPreparer">
        <property name="matcherProvider" ref="matcherProvider" />
        <property name="typeProvider" ref="typeProvider" />
        <property name="loader" ref="smartparamLoader" />
        <property name="cache" ref="paramCache" />
    </bean>

    <bean id="functionProvider" class="org.smartparam.engine.core.engine.FunctionProviderImpl">
        <property name="loader" ref="smartparamFunctionLoader"/>
        <property name="cache" ref="functionCache" />
    </bean>

    <bean id="paramCache" class="org.smartparam.engine.core.cache.MapParamCache" />
    <bean id="functionCache" class="org.smartparam.engine.core.cache.MapFunctionCache" />

    <bean id="typeProvider" class="org.smartparam.engine.core.config.SmartTypeProvider"/>

    <bean id="invokerProvider" class="org.smartparam.engine.core.config.SmartInvokerProvider"/>

    <bean id="matcherProvider" class="org.smartparam.engine.core.config.SmartMatcherProvider"/>

    <bean id="assemblerProvider" class="org.smartparam.engine.core.config.SmartAssemblerProvider">
        <property name="assemblerObjects">
            <list>
                <bean class="org.smartparam.engine.assemblers.GenericEnumAssembler" />
            </list>
        </property>
    </bean>

</beans>